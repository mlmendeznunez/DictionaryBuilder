<h3>Add a task to $category.getName()</h3>

<form action="/tasks" method="post">
  <input id="categoryId" name="categoryId" type="hidden" value="$category.getId()">

  <div class="form-group">
    <label for="description">Make</label>
    <input id="description" name="description" type="test" class="form-control">
  </div>

  <button type="submit" class="btn btn-success">Add task</button>
</form>
